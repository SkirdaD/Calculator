<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragments.AboutAppFragment.AboutAppFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutApp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="447dp"
            android:layout_height="75dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            android:text="@string/copyright_c_skirdad_and_russabit_2023"
            android:textColor="@color/white"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/go_to_github_button"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/light_gray_button"
            android:text="@string/view_source_code_on_github"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/write_to_developers_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/write_to_developers_button"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/light_gray_button"
            android:text="@string/write_to_developers"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/rate_the_app_button"
            app:layout_constraintStart_toStartOf="@+id/go_to_github_button"
            app:layout_constraintTop_toBottomOf="@+id/go_to_github_button" />

        <Button
            android:id="@+id/rate_the_app_button"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/orange_button"
            android:text="@string/rate_the_application"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/write_to_developers_button"
            app:layout_constraintTop_toBottomOf="@+id/write_to_developers_button" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher1_round" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="247dp"
            android:layout_height="70dp"
            android:text="@string/calculator"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.54" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>